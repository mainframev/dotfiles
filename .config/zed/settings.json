{
  "theme": "Moonlight Italic",
  "vim_mode": true,
  "base_keymap": "VSCode",
  "buffer_font_size": 14,
  "buffer_line_height": { "custom": 1.3 },
  "current_line_highlight": "line",
  "ui_font_size": 16,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "enabled": true,
    "button": true,
    "model_parameters": []
  },
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never",
    "cursors": false,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "status_bar": {
    "experimental.show": true
  },
  "relative_line_numbers": "enabled",
  "gutter": {
    "line_numbers": true
  },
  "minimap": {
    "show": "never"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "cursor_shape": "hollow",
  "cursor_blink": false,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "linked_edits": true,
  "show_edit_predictions": true,
  "wrap_guides": [100],
  "show_wrap_guides": true,
  "tab_size": 2,
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Mocha"
  }
}
